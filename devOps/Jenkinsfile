pipeline {
    agent any

    stages {
        stage('Докачка библиотек') {
            steps {
                cd 'client'
                npm i
            }
        }
        stage('Тестирование') {
            steps {
                echo 'Выполняем команды для тестирования'
                npm test
            }
        }
        stage('Сборка') {
            steps {
                echo 'Выполняем команды для сборки'
                npm build
            }
        }
    }
}

